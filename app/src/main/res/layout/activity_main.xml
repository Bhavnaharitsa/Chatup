<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/tint_blue"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView"
        android:layout_width="341dp"
        android:layout_height="85dp"
        android:layout_marginStart="54dp"
        android:layout_marginTop="147dp"
        android:layout_marginEnd="54dp"
        android:gravity="center"
        android:text="@string/login_page_intro"
        android:fontFamily="@font/font_family"
        android:textSize="@dimen/medium_large_text"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="77dp"
        android:background="@drawable/grey_rectangle_border"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        tools:layout_editor_absoluteX="34dp">


        <TextView
            android:id="@+id/GoogleLogin"
            android:layout_width="223dp"
            android:layout_height="41dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_google"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/login_google"
            android:textColor="#3d3d3d"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="94dp"
            tools:layout_editor_absoluteY="431dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="300dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:id="@+id/SignInManually"
            android:text="@string/click_to_signin_manually"
            android:textSize="@dimen/small_medium_text" />
    </LinearLayout>




   </LinearLayout>