<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Feedback"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feedback"
        android:textSize="@dimen/medium_large_text"
        android:textStyle="bold"
        android:fontFamily="@font/font_family"
        android:textColor="@color/blue"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"/>

    <TextView
        android:layout_width="360dp"
        android:layout_height="189dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/blue_rectangle_border"
        android:fontFamily="@font/font_family"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:gravity="center"
        android:text="@string/feedback_intro"
        android:textColor="@color/black"
        android:textSize="@dimen/medium_text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/FeedbackMail"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:drawableRight="@drawable/ic_arrow_white"
        android:layout_gravity="center"
        android:background="@drawable/rounded_background_blue"
        android:textColor="@color/white"
        android:text="@string/feedback_reques"
        android:textSize="15dp"/>



</LinearLayout>